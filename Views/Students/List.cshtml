@{
    ViewData["Title"] = "Students";
}

@model List<UnderstandingMVC.Models.Entities.Student>

    <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Student Details</h3>
    <a class="btn btn-primary" asp-controller="Students" asp-action="Add">Add</a>
    </div>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Mobile No.</th>
                <th scope="col">Branch</th>
                <th scope="col">Semester</th>
                <th scope="col">Result</th>
                <th scope="col">Address</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Phone</td>
                    <td>@student.Branch</td>
                    <td>@student.Semester</td>
                    <td>@student.Result</td>
                    <td>@student.Address</td>
                    <td>
                        <button class="btn btn-primary btn-sm mb-2 mb-sm-0">Edit</button>
                        <form asp-action="Delete" asp-controller="Students" method="post" style="display:inline;">
                            <input type="hidden" name="Id" value="@student.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>