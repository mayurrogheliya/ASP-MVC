@{
    ViewData["Title"] = "Students";
}

@model UnderstandingMVC.Models.AddStudentViewModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Student Form</h3>
    <a class="btn btn-primary" asp-controller="Students" asp-action="List">View</a>
</div>
<form  method="post" asp-action="@(ViewBag.StudentId!=null?"Edit":"Add")" asp-route-id="@(ViewBag.StudentId)" class="row g-3">
    <div class="col-md-6">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter your name" asp-for="Name">
    </div>
    <div class="col-md-6">
        <label for="phone" class="form-label">Mobile No.</label>
        <input type="number" class="form-control" id="phone" placeholder="Enter your mobile no." asp-for="Phone">
    </div>
    <div class="col-md-4">
        <label for="branch" class="form-label">Branch</label>
        <input type="text" class="form-control" id="branch" placeholder="Enter your branch name" asp-for="Branch">
    </div>
    <div class="col-md-4">
        <label for="sem" class="form-label">Semester</label>
        <input type="number" class="form-control" id="sem" placeholder="Enter your semester" asp-for="Semester">
    </div>
    <div class="col-md-4">
        <label for="result" class="form-label">Result</label>
        <input type="number" class="form-control" id="result" placeholder="Enter your grade" asp-for="Result">
    </div>
    <div class="col-12">
        <label for="address" class="form-label">Address</label>
        <input type="text" class="form-control" id="address" placeholder="Enter your address" asp-for="Address">
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>