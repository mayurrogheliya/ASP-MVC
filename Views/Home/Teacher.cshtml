@{
    ViewData["Title"] = "Teacher Page";
}

<div>
    <h3>Teacher Form</h3>
    <form class="row g-3">
        <div class="col-md-6">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Enter your name">
        </div>
        <div class="col-md-6">
            <label for="phone" class="form-label">Mobile No.</label>
            <input type="number" class="form-control" id="phone" placeholder="Enter your mobile no.">
        </div>
        <div class="col-md-4">
            <label for="branch" class="form-label">Branch</label>
            <input type="text" class="form-control" id="branch" placeholder="Enter your branch name">
        </div>
        <div class="col-md-4">
            <label for="sub1" class="form-label">Subject 1</label>
            <input type="number" class="form-control" id="sub1" placeholder="Enter your first subject">
        </div>
        <div class="col-md-4">
            <label for="sub2" class="form-label">Subject 2</label>
            <input type="number" class="form-control" id="sub2" placeholder="Enter your second subject">
        </div>
        <div class="col-12">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" placeholder="Enter your address">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>

    <div class="mt-5">
        <h3>Teacher Details</h3>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Mobile No.</th>
                        <th scope="col">Branch</th>
                        <th scope="col">Subject-1</th>
                        <th scope="col">Subject-2</th>
                        <th scope="col">Address</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Keshav</td>
