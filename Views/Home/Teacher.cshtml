                        <td>
                            <button class="btn btn-primary btn-sm mb-2 mb-sm-0">Edit</button>
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
